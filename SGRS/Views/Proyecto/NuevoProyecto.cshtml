



<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Inicio</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Proyecto</a></li>
                <li class="breadcrumb-item active">Nuevo</li>
            </ol>
        </div>
    </div>
</div>





<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Nuevo Registro</h4>

                <button class="btn btn-danger mb-3" id="btnRegresar">Regresar</button>

                <div class="form-group row">
                    <label for="example-text-input" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value="" id="txtId">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Programa</label>
                    <div class="col-sm-10">
                        <select class="form-control">
                            <option>Seleccionar</option>
                            <option>RELACIONES COMUNITARIAS</option>
                            <option>COMUNICACIÓN EXTERNA</option>
                            <option>COMUNICACIÓN INTERNA</option>
                            <option>EXTENSIÓN CULTURAL Y CIENTÍFICA </option>
                            <option>SOLIDARIDAD SOCIAL</option>
                            <option>DONACIONES</option>
                            <option>SINERGIAS</option>

                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">COMPONENTE</label>
                    <div class="col-sm-10">
                        <select class="form-control">
                            <option>Seleccionar</option>
                            <option>COMPONENTE 01</option>
                            <option>COMPONENTE 02</option>
                            <option>COMPONENTE 03</option>
                            <option>COMPONENTE 04</option>
                            <option>COMPONENTE 05</option>
                            <option>COMPONENTE 06</option>
                            <option>COMPONENTE 07</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value="" id="txtNombre">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Descripción</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value="" id="txtDescripcion">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Plazo Inicio</label>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="txtPlazoInicio" name="txtPlazoInicio">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Plazo Fin</label>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="txtPlazoFin" name="txtPlazoFin">

                            <div class="input-group-append">
                                <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Presupuesto</label>
                    <div class="col-sm-2">
                        <input class="form-control" type="text" value="" id="txtNombre">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Estado</label>
                    <div class="col-sm-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input checkMasAgrende" id="chkEstado">

                        </div>
                    </div>
                </div>

                <button class="btn btn-primary" id="btnGuardar">Guardar</button>


            </div>
        </div>
    </div>
    <!-- end col -->
</div>


<script>

    $('#btnRegresar').click(function () {

        $.post('/Proyecto/ListaProyecto', null, function (response) {

            $("#divLayoutBody").html(response);
        });
    });
    $(document).ready(function () {


        var options = {
            format: 'dd/mm/yyyy',
            todayHighlight: true,
            autoclose: true,
            language: 'es'
        };

        $('#txtPlazoFin').datepicker(options);
        $('#txtPlazoInicio').datepicker(options);
    })


</script>